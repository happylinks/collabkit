{
  "private": true,
  "name": "collabkit-monorepo",
  "workspaces": [
    "examples/*",
    "packages/@collabkit/*",
    "org/*"
  ],
  "scripts": {
    "dev": "pnpm --recursive --parallel run dev",
    "server": "yarn workspace server dev",
    "typecheck": "tsc -b examples/demo org/website"
  },
  "devDependencies": {
    "pnpm": "^7.5.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
