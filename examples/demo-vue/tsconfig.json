{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "lib": ["ES2016", "ES2017.Object", "DOM", "DOM.Iterable"],
    "baseUrl": "../../",
    "paths": {
      "@collabkit/client": ["packages/@collabkit/client/src"],
      "@collabkit/colors": ["packages/@collabkit/colors/src"],
      "@collabkit/core": ["packages/@collabkit/core/src"],
      "@collabkit/custom-themes": ["packages/@collabkit/custom-themes/src"],
      "@collabkit/vue": ["packages/@collabkit/vue/src"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
